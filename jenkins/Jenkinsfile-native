
pipeline {
    agent any
    
    environment {
        CONFIG_FILE = 'config/global-config.env'
        VENV_PATH = '/var/lib/jenkins/mlops-venv'
    }
    
    stages {
        stage('Setup Python Environment') {
            steps {
                sh '''#!/bin/bash
                echo "ðŸ Setting up Python virtual environment..."
                
                if [ ! -d "${VENV_PATH}" ]; then
                    echo "ðŸ“¦ Creating new virtual environment at ${VENV_PATH}"
                    python3 -m venv ${VENV_PATH}
                else
                    echo "âœ… Virtual environment exists at ${VENV_PATH}"
                fi
                
                # Activate and upgrade
                source ${VENV_PATH}/bin/activate
                pip install --upgrade pip
                
                # Install required packages
                echo "ðŸ“¦ Installing Python packages..."
                pip install mlflow bentoml scikit-learn pandas numpy joblib faker seaborn matplotlib
                
                # Verify installation
                echo "âœ… Verifying installation:"
                python3 -c "import mlflow, bentoml, pandas; print('All packages available')"
                
                echo "âœ… Python environment ready"
                '''
            }
        }
        
        stage('Load Configuration') {
            steps {
                script {
                    echo "ðŸ” Looking for configuration file: ${env.CONFIG_FILE}"
                    
                    if (fileExists(env.CONFIG_FILE)) {
                        echo "âœ… Found config file: ${env.CONFIG_FILE}"
                        
                        sh """#!/bin/bash
                        echo "ðŸ“„ Reading configuration file..."
                        cat ${CONFIG_FILE}
                        
                        echo "ðŸ”§ Loading environment variables..."
                        source ${VENV_PATH}/bin/activate
                        set -a
                        source ${CONFIG_FILE}
                        set +a
                        
                        # Export variables to file
                        env | grep -E "AWS_|SONAR_|ECR_|K8S_|DOCKER_|MLFLOW_|GITHUB_|GIT_|PROJECT_|ENVIRONMENT" > jenkins-runtime.env
                        
                        echo "âœ… Environment variables exported:"
                        cat jenkins-runtime.env
                        """
                        
                        // Load environment variables into Jenkins
                        if (fileExists('jenkins-runtime.env')) {
                            def props = readProperties file: 'jenkins-runtime.env'
                            props.each { key, value ->
                                env.setProperty(key, value)
                            }
                            echo "âœ… Configuration loaded successfully"
                            
                            // Verify critical variables
                            sh '''#!/bin/bash
                            echo "ðŸ” Verifying critical environment variables:"
                            echo "AWS_REGION: ${AWS_REGION:-NOT_SET}"
                            echo "ECR_REPO_URI: ${ECR_REPO_URI:-NOT_SET}"
                            echo "CLUSTER_NAME: ${CLUSTER_NAME:-NOT_SET}"
                            
                            # Check if critical vars are set
                            if [ -z "${AWS_REGION}" ] || [ -z "${ECR_REPO_URI}" ]; then
                                echo "âŒ Critical environment variables missing!"
                                exit 1
                            fi
                            
                            echo "âœ… Environment verification passed"
                            '''
                        } else {
                            error("âŒ Failed to create jenkins-runtime.env file")
                        }
                    } else {
                        sh """#!/bin/bash
                        echo "âŒ Configuration file not found at: ${CONFIG_FILE}"
                        echo "ðŸ“‚ Current directory contents:"
                        ls -la
                        echo "ðŸ“‚ Checking config directory:"
                        ls -la config/ || echo "Config directory does not exist"
                        echo "ðŸ“‚ Searching for config files:"
                        find . -name "*.env" -type f || echo "No .env files found"
                        """
                        error("âŒ Configuration file missing: ${env.CONFIG_FILE}")
                    }
                }
            }
        }

        stage('Checkout & Verify') {
            steps {
                sh '''#!/bin/bash
                echo "ðŸ“‚ Verifying repository structure..."
                echo "Current working directory: $(pwd)"
                
                echo "ðŸ“ Repository contents:"
                ls -la
                
                echo "ðŸ” Checking required files..."
                
                # Check Python source files
                if [ -f "src/train_model.py" ]; then
                    echo "âœ… src/train_model.py found"
                else
                    echo "âŒ src/train_model.py not found"
                    exit 1
                fi
                
                if [ -f "src/generate_data.py" ]; then
                    echo "âœ… src/generate_data.py found"
                else
                    echo "âŒ src/generate_data.py not found"
                    exit 1
                fi
                
                if [ -f "src/fraud_service.py" ]; then
                    echo "âœ… src/fraud_service.py found"
                else
                    echo "âŒ src/fraud_service.py not found"
                    exit 1
                fi
                
                # Check Docker and infrastructure files
                if [ -f "Dockerfile" ]; then
                    echo "âœ… Dockerfile found"
                else
                    echo "âŒ Dockerfile not found"
                    exit 1
                fi
                
                if [ -d "terraform" ]; then
                    echo "âœ… terraform directory found"
                    ls -la terraform/
                else
                    echo "âŒ terraform directory not found"
                    exit 1
                fi
                
                if [ -d "k8s/helm" ]; then
                    echo "âœ… k8s/helm directory found"
                    ls -la k8s/helm/
                else
                    echo "âŒ k8s/helm directory not found"
                    exit 1
                fi
                
                echo "âœ… Repository structure verified"
                '''
            }
        }

        stage('Code Quality & Security') {
            parallel {
                stage('Trivy Security Scan') {
                    steps {
                        sh '''#!/bin/bash
                        echo "ðŸ”’ Running Trivy security scan..."
                        trivy fs . > trivy-fs-report.txt || {
                            echo "âš ï¸ Trivy scan had issues, but continuing..."
                            echo "Trivy scan completed with warnings" > trivy-fs-report.txt
                        }
                        echo "âœ… Security scan completed"
                        '''
                    }
                }
                
                stage('SonarQube Code Quality') {
                    steps {
                        withCredentials([string(credentialsId: 'sonarqube-creds', variable: 'SONAR_AUTH_TOKEN')]) {
                            sh """#!/bin/bash
                            echo "ðŸ“Š Running SonarQube code quality scan..."
                            sonar-scanner \
                                -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                                -Dsonar.sources=src \
                                -Dsonar.host.url=${SONAR_HOST_URL} \
                                -Dsonar.login=${SONAR_AUTH_TOKEN} || {
                                echo "âš ï¸ SonarQube scan had issues, but continuing..."
                            }
                            echo "âœ… Code quality scan completed"
                            """
                        }
                    }
                }
            }
        }

        stage('MLflow Cleanup') {
            steps {
                sh '''#!/bin/bash
                echo "ðŸ§¹ Cleaning up old MLflow runs..."
                source ${VENV_PATH}/bin/activate
                
                # Create scripts directory if it doesn't exist
                mkdir -p scripts
                
                # Check if cleanup script exists, if not create a simple one
                if [ ! -f "scripts/cleanup_mlflow.py" ]; then
                    cat > scripts/cleanup_mlflow.py << 'EOF'
import mlflow
import os

def cleanup_old_runs():
    mlflow.set_tracking_uri("file:./mlruns")
    try:
        experiment_name = os.getenv('MLFLOW_EXPERIMENT_NAME', 'fraud-detection-production')
        max_runs = int(os.getenv('MAX_MLFLOW_RUNS_TO_KEEP', '5'))
        
        print(f"Looking for experiment: {experiment_name}")
        print(f"Max runs to keep: {max_runs}")
        
        try:
            experiment = mlflow.get_experiment_by_name(experiment_name)
        except:
            experiment = None
        
        if experiment:
            runs = mlflow.search_runs(experiment_ids=[experiment.experiment_id])
            print(f"Found {len(runs)} existing runs")
            
            if len(runs) > max_runs:
                old_runs = runs.iloc[max_runs:]
                for _, run in old_runs.iterrows():
                    try:
                        mlflow.delete_run(run.run_id)
                        print(f"Deleted old run: {run.run_id}")
                    except Exception as e:
                        print(f"Could not delete run {run.run_id}: {e}")
            
            print(f"Cleanup completed. Keeping {min(len(runs), max_runs)} runs.")
        else:
            print("Experiment not found, will be created during training.")
            
    except Exception as e:
        print(f"MLflow cleanup error: {e}")

if __name__ == "__main__":
    cleanup_old_runs()
EOF
                fi
                
                # Run cleanup
                python3 scripts/cleanup_mlflow.py
                echo "âœ… MLflow cleanup completed"
                '''
            }
        }

        stage('ML Pipeline') {
            steps {
                sh '''#!/bin/bash
                echo "ðŸ¤– Running ML pipeline..."
                source ${VENV_PATH}/bin/activate
                
                # Create necessary directories
                mkdir -p data models
                
                # Step 1: Generate training data
                echo "ðŸ“Š Generating training data..."
                python3 src/generate_data.py
                
                if [ ! -f "data/transactions.csv" ]; then
                    echo "âŒ Training data generation failed"
                    exit 1
                fi
                
                echo "âœ… Training data generated successfully"
                echo "ðŸ“ˆ Data preview:"
                head -3 data/transactions.csv
                
                # Step 2: Train models
                echo "ðŸŽ“ Training models..."
                python3 src/train_model.py
                
                if [ ! -f "models/best_model.pkl" ]; then
                    echo "âŒ Model training failed"
                    ls -la models/ || echo "Models directory empty"
                    exit 1
                fi
                
                echo "âœ… Model training completed successfully"
                ls -la models/
                '''
            }
        }

        stage('Application Testing') {
            steps {
                sh '''#!/bin/bash
                echo "ðŸ§ª Testing application components..."
                source ${VENV_PATH}/bin/activate
                
                # Test model loading
                echo "ðŸ” Testing model loading..."
                python3 -c "
import joblib
import os
if os.path.exists('models/best_model.pkl'):
    model = joblib.load('models/best_model.pkl')
    print(f'âœ… Model loads successfully: {type(model).__name__}')
    if hasattr(model, 'feature_names_in_'):
        print(f'Model features: {len(model.feature_names_in_)} features')
else:
    print('âŒ Model file not found')
    exit(1)
"
                
                # Test service imports
                echo "ðŸ” Testing BentoML service..."
                python3 -c "
import sys
sys.path.append('src')
try:
    from fraud_service import svc
    print('âœ… BentoML service imports successfully')
except ImportError as e:
    print(f'âŒ BentoML service import failed: {e}')
    exit(1)
"
                
                echo "âœ… Application tests passed"
                '''
            }
        }

        stage('Infrastructure') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-creds',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    dir("${env.TERRAFORM_DIR}") {
                        sh '''#!/bin/bash
                        echo "ðŸ—ï¸ Managing AWS infrastructure..."
                        
                        # Set AWS credentials
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                        export AWS_DEFAULT_REGION=${AWS_REGION}
                        
                        # Verify AWS access
                        aws sts get-caller-identity
                        
                        echo "ðŸ”§ Initializing Terraform..."
                        terraform init
                        
                        echo "ðŸ“‹ Planning infrastructure changes..."
                        terraform plan
                        
                        echo "ðŸš€ Applying infrastructure..."
                        terraform apply -auto-approve
                        
                        echo "âœ… Infrastructure deployment completed"
                        '''
                    }
                }
            }
        }

        stage('Container Build & Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-creds',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''#!/bin/bash
                    echo "ðŸ³ Building and pushing Docker container..."
                    
                    # Configure AWS CLI
                    aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID
                    aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY
                    aws configure set default.region ${AWS_REGION}

                    # Build Docker image
                    echo "ðŸ”¨ Building Docker image: ${ECR_REPO_NAME}:${DOCKER_IMAGE_TAG}"
                    docker build -t ${ECR_REPO_NAME}:${DOCKER_IMAGE_TAG} .
                    
                    # Login to ECR
                    echo "ðŸ” Logging into ECR..."
                    aws ecr get-login-password --region ${AWS_REGION} | docker login --username AWS --password-stdin ${ECR_REPO_URI}
                    
                    # Tag and push image
                    echo "ðŸ“¤ Pushing image to ECR..."
                    docker tag ${ECR_REPO_NAME}:${DOCKER_IMAGE_TAG} ${ECR_REPO_URI}:${DOCKER_IMAGE_TAG}
                    docker push ${ECR_REPO_URI}:${DOCKER_IMAGE_TAG}
                    
                    # Also push as latest
                    docker tag ${ECR_REPO_NAME}:${DOCKER_IMAGE_TAG} ${ECR_REPO_URI}:latest
                    docker push ${ECR_REPO_URI}:latest
                    
                    # Run security scan on image
                    echo "ðŸ”’ Running security scan on Docker image..."
                    trivy image ${ECR_REPO_URI}:${DOCKER_IMAGE_TAG} > trivy-image-report.txt || {
                        echo "âš ï¸ Image security scan had issues, but continuing..."
                        echo "Image scan completed with warnings" > trivy-image-report.txt
                    }
                    
                    echo "âœ… Container ready: ${ECR_REPO_URI}:${DOCKER_IMAGE_TAG}"
                    '''
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-creds',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''#!/bin/bash
                    echo "ðŸš€ Deploying to Kubernetes production..."
                    
                    # Configure AWS and kubectl
                    aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID
                    aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY
                    aws configure set default.region ${AWS_REGION}
                    
                    echo "âš“ Updating kubeconfig..."
                    aws eks update-kubeconfig --region ${AWS_REGION} --name ${CLUSTER_NAME}
                    
                    # Verify kubectl access
                    kubectl get nodes
                    
                    # Deploy with Helm
                    echo "ðŸ“¦ Deploying with Helm..."
                    helm upgrade --install fraud-detection k8s/helm \
                        --namespace ${K8S_NAMESPACE} \
                        --create-namespace \
                        --values k8s/helm/values-production.yaml \
                        --set image.repository=${ECR_REPO_URI} \
                        --set image.tag=${DOCKER_IMAGE_TAG} \
                        --timeout=10m
                    
                    # Wait for deployment
                    echo "â³ Waiting for deployment to be ready..."
                    kubectl wait --for=condition=ready pod -l app=fraud-detection -n ${K8S_NAMESPACE} --timeout=300s
                    
                    # Get deployment status
                    echo "ðŸ“Š Deployment status:"
                    kubectl get pods -n ${K8S_NAMESPACE}
                    kubectl get svc -n ${K8S_NAMESPACE}
                    
                    # Get LoadBalancer endpoint
                    EXTERNAL_IP=$(kubectl get svc fraud-detection -n ${K8S_NAMESPACE} -o jsonpath='{.status.loadBalancer.ingress[0].hostname}' 2>/dev/null || echo "pending")
                    
                    echo ""
                    echo "ðŸŽ‰ DEPLOYMENT COMPLETED SUCCESSFULLY!"
                    echo "========================================"
                    echo "ðŸŒ API Endpoint: http://${EXTERNAL_IP}"
                    echo "ðŸ§ª Health Check: http://${EXTERNAL_IP}/healthz"
                    echo "ðŸ“š API Documentation: http://${EXTERNAL_IP}/docs"
                    echo "ðŸ” Test Prediction: http://${EXTERNAL_IP}/predict"
                    echo ""
                    echo "ðŸ“ Example API call:"
                    echo "curl -X POST http://${EXTERNAL_IP}/predict \\"
                    echo "  -H 'Content-Type: application/json' \\"
                    echo "  -d '{\"amount\": 150.0, \"merchant\": \"Amazon\", \"location\": \"NewYork\", \"card_type\": \"Visa\"}'"
                    echo "========================================"
                    '''
                }
            }
        }
    }

    post {
        always {
            echo 'ðŸ§¹ Pipeline cleanup and archiving...'
            
            // Archive important artifacts
            archiveArtifacts artifacts: 'trivy-*.txt', allowEmptyArchive: true
            archiveArtifacts artifacts: 'models/*.pkl', allowEmptyArchive: true
            archiveArtifacts artifacts: 'data/*.csv', allowEmptyArchive: true
            
            // Show final workspace state
            sh '''#!/bin/bash
            echo "ðŸ“ Final workspace contents:"
            ls -la
            echo "ðŸ Virtual environment location: ${VENV_PATH}"
            '''
        }
        success {
            echo 'ðŸŽ‰ PIPELINE COMPLETED SUCCESSFULLY!'
            echo 'âœ… Your fraud detection API is now live and accessible!'
            echo 'ðŸŒ Check the deployment logs above for the LoadBalancer URL'
        }
        failure {
            echo 'âŒ Pipeline failed. Debugging information:'
            sh '''#!/bin/bash
            echo "ðŸ” Debugging information:"
            echo "Working directory: $(pwd)"
            echo "Environment variables:"
            env | grep -E "AWS_|SONAR_|ECR_|K8S_|DOCKER_|MLFLOW_" | head -10 || echo "No environment variables found"
            echo "Virtual environment status:"
            ls -la ${VENV_PATH}/bin/ 2>/dev/null || echo "Virtual environment not found"
            echo "Files in workspace:"
            ls -la
            '''
        }
    }
}
